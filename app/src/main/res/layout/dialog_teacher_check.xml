<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup_test_check_msg" />
    
        
    <kr.co.moumou.smartwords.customview.CustomButton
        android:id="@+id/btn_confirmCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:text="@string/study_request_correct_cancel"
		android:gravity="center"
		android:textSize="24px"
		android:textColor="@color/white"        
		android:background="@drawable/sel_btn_logout"
		android:textStyle="bold"
		android:padding="10dip"
		android:visibility="invisible"
        />
</RelativeLayout>
