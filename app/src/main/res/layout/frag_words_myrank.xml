<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_global_small" >
    
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <kr.co.moumou.smartwords.customview.CustomButton
            android:id="@+id/bt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/our"
            android:textColor="@color/white"
            android:background="@drawable/btn_navi" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal" > 
        
        <LinearLayout
            android:id="@+id/ll_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <LinearLayout
                android:id="@+id/ll_ranktitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/skyblue"
                android:orientation="horizontal" >
                
                <kr.co.moumou.smartwords.customview.CustomTextView
                    android:id="@+id/tv_titlerank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/rank_list"
                    android:textSize="@dimen/efont10"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_weight="1" />
                
                <kr.co.moumou.smartwords.customview.CustomTextView
                    android:id="@+id/tv_titlename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/rank_name"
                    android:textSize="@dimen/efont10"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_weight="1" />
                
                <kr.co.moumou.smartwords.customview.CustomTextView
                    android:id="@+id/tv_titleword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/rank_word"
                    android:textSize="@dimen/efont10"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_weight="1" />
                
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/ll_ranklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                
            </LinearLayout>
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <LinearLayout
                android:id="@+id/ll_myscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_box_green" >
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    
                    <kr.co.moumou.smartwords.customview.CustomTextView
                        android:id="@+id/tv_myname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/efont19"
                        android:textColor="@color/black"
                        android:gravity="center" />
                    
                    <kr.co.moumou.smartwords.customview.CustomTextView
                        android:id="@+id/tv_myid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/efont12"
                        android:textColor="@color/words_gray"
                        android:gravity="center" />
                    
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/ll_knowword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    
                    <kr.co.moumou.smartwords.customview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/rank_word"
                        android:textSize="@dimen/efont11"
                        android:textColor="@color/words_gray"
                        android:layout_weight="1" />
                    
                    <kr.co.moumou.smartwords.customview.CustomTextView
                        android:id="@+id/tv_knowword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/efont43"
                        android:textColor="@color/rank_know" />
                    
                    <kr.co.moumou.smartwords.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rank_count"
                        android:textSize="@dimen/efont11"
                        android:textColor="@color/words_gray" />
                    
                </LinearLayout>
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <LinearLayout
                    android:id="@+id/ll_ouraver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_box_white"
                    android:orientation="vertical" >
                    
                    <kr.co.moumou.smartwords.customview.CustomTextView
                        android:id="@+id/tv_ourtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rank_our"
                        android:textSize="@dimen/efont11"
                        android:textColor="@color/words_gray"
                        android:gravity="center" />
                    
                    <kr.co.moumou.smartwords.customview.CustomTextView
                        android:id="@+id/tv_ouraver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/efont27"
                        android:textColor="@color/cal_detail"
                        android:gravity="center" />
                    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_allaver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_box_white"
                    android:orientation="vertical" >
                    
                    <kr.co.moumou.smartwords.customview.CustomTextView
                        android:id="@+id/tv_alltitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rank_all"
                        android:textSize="@dimen/efont11"
                        android:textColor="@color/words_gray"
                        android:gravity="center" />
                    
                    <kr.co.moumou.smartwords.customview.CustomTextView
                        android:id="@+id/tv_allaver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/efont27"
                        android:textColor="@color/cal_detail"
                        android:gravity="center" />
                    
                </LinearLayout>
                
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
