<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wordtest_bg_start" >

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_cont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="12dip"
            android:lineSpacingMultiplier="1.2"
            android:text="영어 단어에 해당하는 우리말 뜻을 고르세요."
            android:textColor="@color/words_start_popup_txt"
            android:textSize="22px" />
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>
        </LinearLayout>
        
        <kr.co.moumou.smartwords.customview.CustomButton
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:gravity="center"
            android:text="Start!"
            android:textColor="@drawable/words_test_start_popup_txt"
            android:textSize="45px"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true" />
        
    </RelativeLayout>
</LinearLayout>