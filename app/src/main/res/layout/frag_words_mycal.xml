<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/disable" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white" >

        <Button
            android:id="@+id/btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left_disable"
            />

        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/efont15" />

        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/efont15" />

        <LinearLayout
            android:id="@+id/ll_margin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:background="@drawable/arrow_right_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_dayname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_dayname" >
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/cal_sunday"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_gray"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_gray"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_gray"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_gray"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_gray"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_blue"
            android:gravity="center"
            android:layout_weight="1" />
        
    </LinearLayout>
    
    <GridView
        android:id="@+id/gv_cal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:numColumns="7" >
        
    </GridView>

</LinearLayout>
