<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/disable" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white" >
        
        <LinearLayout
            android:id="@+id/ll_selyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" >
            
            <kr.co.moumou.smartwords.customview.CustomTextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/efont13" />
            
            <ImageView
                android:id="@+id/iv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_calander_arrow" />
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_margin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_selmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" >
            
            <kr.co.moumou.smartwords.customview.CustomTextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/efont13" />
            
            <ImageView
                android:id="@+id/iv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_calander_arrow" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_dayname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_dayname" >
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/cal_sunday"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_gray"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_gray"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_gray"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_gray"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_gray"
            android:gravity="center"
            android:layout_weight="1" />
        
        <kr.co.moumou.smartwords.customview.CustomTextView
            android:id="@+id/tv_dayname7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/efont11"
            android:textStyle="bold"
            android:textColor="@color/words_blue"
            android:gravity="center"
            android:layout_weight="1" />
        
    </LinearLayout>
    
    <GridView
        android:id="@+id/gv_cal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:numColumns="7" >
        
    </GridView>

</LinearLayout>
