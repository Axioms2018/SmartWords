<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEEEEE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <kr.co.moumou.smartwords.customview.ViewTopMenu
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/view_top_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:menuType="4" />

        <LinearLayout
            android:id="@+id/ll_cons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_global_small"
            android:orientation="vertical">
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
	            <kr.co.moumou.smartwords.customview.CustomButton
	                android:id="@+id/btn_level"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:text="Level 1"
	                android:textColor="@color/white"
	                android:textSize="24px"
	                android:textStyle="bold"
	                android:background="@drawable/btn_navi" />
	            
	            <kr.co.moumou.smartwords.customview.CustomButton
	                android:id="@+id/btn_day"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/btn_navi"
	                android:gravity="center"
	                android:text="Day 1"
	                android:textColor="@color/white"
	                android:textSize="24px"
	                android:textStyle="bold" />

	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1" >
	            </LinearLayout>

	            <ImageButton
	                android:id="@+id/btn_temp_close"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/sel_words_temp_close"
	                android:visibility="gone" />
                
            </LinearLayout>

			<LinearLayout
				android:id="@+id/ll_conts"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_degree1"
				android:gravity="center"
				android:orientation="vertical">

				<LinearLayout
					android:id="@+id/ll_test_type"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="horizontal"></LinearLayout>

			</LinearLayout>

		</LinearLayout>

    </LinearLayout>
    
</FrameLayout>